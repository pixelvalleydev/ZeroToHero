@model WebApp.Models.Filme

@{
    ViewData["Title"] = "Cadastrar";
}

<h2>Cadastrar</h2>

<h4>Filme</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Cadastrar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" class="form-control" />

            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssistidoEm" class="control-label"></label>
                <input asp-for="AssistidoEm" class="form-control" />
                <span asp-validation-for="AssistidoEm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UrlCapa" class="control-label"></label>
                <input asp-for="UrlCapa" class="form-control" />
                <span asp-validation-for="UrlCapa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Listar">Voltar para listagem</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
